@model PatientRegistrationSystem.Models.UserDetail

@{
    ViewBag.Title = "Userdetails";
    var email = ViewBag.email;
}
<br />
<br />
<h2>New Patient Registration System</h2>

@using (Html.BeginForm("Userdetail","Home")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Please Enter the details below</legend>

         <div class="editor-label">
            @Html.LabelFor(model => model.email)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.email, new {@Value = ViewBag.email})
            @Html.ValidationMessageFor(model => model.email)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DOB)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DOB,new { @placeholder="Enter In DD/MM/YYYY"})
            @Html.ValidationMessageFor(model => model.DOB)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Address)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TypeofInjury)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TypeofInjury, new { placeholder="(Optional)"})
            @Html.ValidationMessageFor(model => model.TypeofInjury)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Illness)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Illness,new { placeholder="(Optional)"})
            @Html.ValidationMessageFor(model => model.Illness)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.prefdate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.prefdate,new { placeholder="(Optional)"})
            @Html.ValidationMessageFor(model => model.prefdate)
        </div>
        <br />
        <p>
            <input type="submit" value="Next" class="button"/>
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
